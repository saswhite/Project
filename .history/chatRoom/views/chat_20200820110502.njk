{% extends 'layout.njk' %}

{% block style %}
    <link rel='stylesheet' href='/css/chat.css'>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="title_name">{{}}</div>
        <div class="content">

            {% for items in users %}
                <div class="box">
                    <div class="box1">
                        <img src='{{items.avatar}}' class='avatar'>
                        <div class="chat_name">{{items.nickName}}</div>

                    </div>
                    <div class="box2">
                        <div class="chat_content">{{items.content}}</div>
                    </div>
                    <div class="box3">
                        <div class='chat_date'>{{items.createAt | formatTime}}</div>
                    </div>
                </div>
            {% endfor %}

        </div>
        <div class="input_box">
            <input type="text" class="text">
            <i class="fa fa-smile-o fa-3x smile" aria-hidden="true"></i>
        </div>

    </div>
{% endblock %}

{% block script %}
    <script src="/js/chat.js"></script>
{% endblock %}